    <form class="trail-form" action="/trails" method="post">
      <% include _form %>
      <a href="/trails" class="btn btn-primary">Back</a>
      <button type="submit" class="btn btn-success" onclick="addItem()">Save</button>
      <input type="button" id="add" value="Add New">
