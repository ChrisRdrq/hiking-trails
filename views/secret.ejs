  </main>

  <ul id="list_item">
    <li id=""></li>

  </ul>
  <footer>
    <% include ../partials/footer %>
  </footer>
</main>
  <script>

  document.getElementById("add").onclick  = function() {

      var node = document.createElement("Li");
      var text = document.getElementById("list_item").value;
      var textnode=document.createTextNode(text);
      node.appendChild(textnode);
      document.getElementById("list_item").appendChild(node);
  }


      function initMap() {
        var uluru = {lat: 33.7490, lng: -84.3880};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 4,
          center: uluru
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDG3tP6iZ6Jy-rqgHBKXJ_sXcQbeO4qjJU&callback=initMap">
    </script>
  </body>
